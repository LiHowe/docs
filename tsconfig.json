{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "env.d.ts",
    "packages/**/*",
    "packages/**/*.vue",
    "docs/**/*",
    "docs/**/*.{vue,ts}"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "composite": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
